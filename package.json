{
  "name": "pdf-master",
  "version": "0.1.0",
  "private": true,
  "description": "Enterprise-grade PDF processing software",
  "scripts": {
    "dev": "pnpm --filter @pdf-master/desktop dev",
    "dev:server": "pnpm --filter @pdf-master/server dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,vue,js,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
